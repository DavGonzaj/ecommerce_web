@model List<CartItem>

<h2>Your Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr><th>Name</th><th>Price</th><th>Qty</th><th>Total</th><th>Remove</th></tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>$@item.Price</td>
                <td>@item.Quantity</td>
                <td>$@(item.Price * item.Quantity)</td>
                <td><a asp-action="RemoveFromCart" asp-route-id="@item.ProductId">Remove</a></td>
            </tr>
        }
        </tbody>
    </table>

    <p><strong>Total: $@Model.Sum(i => i.Price * i.Quantity)</strong></p>
    <a class="btn btn-primary" asp-controller="Checkout" asp-action="Index">Proceed to Checkout</a>
}
